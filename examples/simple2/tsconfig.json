{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "src",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "paths": {
      "injection-js": ["/usr/local/lib/node_modules/injection-js/dist"]
    }
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}